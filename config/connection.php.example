<?php

const HOST          = 'localhost';
const DB_NAME       = 'my_db';
const DB_USERNAME   = 'my_username';
const DB_PASSWORD   = 'my_password';

$con = mysqli_connect(HOST, DB_USERNAME, DB_PASSWORD, DB_NAME);

